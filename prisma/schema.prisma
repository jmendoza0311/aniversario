generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Progress {
  id     String @id @default(cuid())
  userId String
  step   Int
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}